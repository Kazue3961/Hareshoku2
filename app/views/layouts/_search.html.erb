<% if admin_signed_in? %>
  <div class="search"></div>
<% elsif %>
  <div class="search">
    <%= form_tag(search_path, :method => 'get') do %>
      <%= select_tag(:category, options_for_select([["ハレ食", "1"],["ハレ友","2"]]))%><br>
      <%= text_field_tag :search %><br>
      <%= submit_tag '探してみる'%>
    <% end %>
  </div>
<% end %>